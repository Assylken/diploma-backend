{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {"include": "../prisma/countries.json", "outDir": "dist/prisma", "watchAssets": true},
      {"include": "../prisma/genre.json", "outDir": "dist/prisma", "watchAssets": true},
      {"include": "../uploads/**/*", "outDir": "dist/uploads", "watchAssets": true}

    ], 
    "watchAssets": true
    
  }
}
